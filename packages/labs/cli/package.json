{
  "private": true,
  "name": "@lit-labs/cli",
  "description": "Tooling for Lit development",
  "version": "0.0.0",
  "author": "Google LLC",
  "license": "BSD-3-Clause",
  "bin": {
    "lit": "./bin/lit.js"
  },
  "bugs": "https://github.com/lit/lit/issues",
  "type": "module",
  "main": "lib/index.js",
  "repository": "lit/lit",
  "scripts": {
    "build": "wireit",
    "build:watch": "npm run build watch",
    "test": "wireit",
    "prepack": "npm run shrinkwrap",
    "test:compile": "wireit",
    "test:actual": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsc --skipLibCheck >/dev/null || echo ''",
      "#TODO": "this needs to depend on ../../localize-tools:build I think",
      "files": [
        "tsconfig.json",
        "src/**/*"
      ],
      "#comment": "This never fails and always emits output so that we can run tests of code that doesn't type check"
    },
    "test": {
      "dependencies": [
        "test:compile",
        "test:actual"
      ]
    },
    "test:compile": {
      "command": "tsc --pretty --noEmit",
      "files": [
        "tsconfig.json",
        "src/**/*"
      ]
    },
    "test:actual": {
      "command": "uvu test '.*_test\\.js$'",
      "dependencies": [
        "build"
      ],
      "files": [],
      "output": []
    }
  },
  "dependencies": {
    "@lit/localize-tools": "^0.6.1",
    "command-line-args": "^5.2.1",
    "command-line-commands": "^3.0.2",
    "command-line-usage": "^6.1.1",
    "tslib": "^1.14.1"
  },
  "devDependencies": {
    "@lit-labs/analyzer": "^0.1.0",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-commands": "^2.0.1",
    "@types/command-line-usage": "^5.0.2",
    "@types/node": "^17.0.30",
    "chai": "^4.3.4",
    "eslint": "^5.16.0",
    "globby": "^10.0.2",
    "stdout-stderr": "^0.1.13",
    "typescript": "~4.6.2",
    "uvu": "^0.5.3"
  },
  "engines": {
    "node": ">=14.8.0"
  },
  "files": [
    "bin",
    "lib",
    "npm-shrinkwrap.json"
  ],
  "exports": "./index.js",
  "homepage": "https://github.com/lit/lit",
  "keywords": [
    "lit",
    "lit-html",
    "lit-element",
    "LitElement"
  ]
}
